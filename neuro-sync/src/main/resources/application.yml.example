spring:
  application:
    name: neuro-sync
  datasource:
    url: ${NEUROSYNC_DB_URL}
    username: ${NEUROSYNC_DB_USERNAME}
    password: ${NEUROSYNC_DB_PASSWORD}
    driver-class-name: oracle.jdbc.OracleDriver
    hikari:
      maximum-pool-size: ${NEUROSYNC_DB_MAX_POOL_SIZE:2}
      minimum-idle: ${NEUROSYNC_DB_MIN_IDLE:1}
      connection-timeout: ${NEUROSYNC_DB_CONN_TIMEOUT:10000}
      idle-timeout: ${NEUROSYNC_DB_IDLE_TIMEOUT:30000}
  jpa:
    hibernate:
      ddl-auto: none
    properties:
      hibernate:
        dialect: org.hibernate.dialect.OracleDialect

server:
  port: ${PORT:8080}

neurosync:
  jwt:
    secret: ${NEUROSYNC_JWT_SECRET}
    expiration: ${NEUROSYNC_JWT_EXPIRATION:3600000}

springdoc:
  swagger-ui:
    path: /swagger-ui.html
  api-docs:
    path: /v3/api-docs
